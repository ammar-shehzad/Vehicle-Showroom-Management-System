@model Customers


        <div class="impl_page_wrapper">
            <div class="container-fluid impl_container">
                <div class="impl_page_heading">
                    <h3>Register Your Self</h3>
                    <p>
                        <a href="index.html">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" className="size-6">
                                <path d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z" />
                                <path d="m12 5.432 8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 0 1-.75-.75v-4.5a.75.75 0 0 0-.75-.75h-3a.75.75 0 0 0-.75.75V21a.75.75 0 0 1-.75.75H5.625a1.875 1.875 0 0 1-1.875-1.875v-6.198a2.29 2.29 0 0 0 .091-.086L12 5.432Z" />
                            </svg>
                            Home
                        </a>
                        <span>» Register Your Self</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Section End -->
<!-- Registration Section Start -->
<div class="impl_section_wrapper impl_contact_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-6" data-aos="fade-right">
                <img src="~/assetsAdmin/imgs/loginCar.jpg"  class="img-flud w-100"/>
            </div>
            <div class="col-lg-6" data-aos="fade-left">

                <form class="impl_contact_form" method="post">
                    <div class="impl_input_flex">
                        <div class="impl_input">
                            <input type="text" placeholder="Your Name Here.." autocomplete="off" asp-for="Customer_name"  class="require">
                            <span asp-validation-for="Customer_name" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="impl_input_flex">
                        <div class="impl_input">
                            <input type="email" placeholder="Your Email Here.." autocomplete="off" asp-for="Customer_email" class="require" data-valid="email" data-error="Email should be valid.">
                            <span asp-validation-for="Customer_email" class="text-danger"></span>
                        </div>
                        </div>

                    <div class="impl_input_flex">
                        <div class="impl_input">
                            <input type="text" placeholder="Your Password Here.." autocomplete="off" asp-for="Customer_password" >
                            <span asp-validation-for="Customer_password" class="text-danger"></span>
                        </div>
                       
                    </div>
                    
                    <div class="impl_form_btn">
                        <button type="submit" class="impl_btn submitForm">Register Me!</button>
                    </div>
                </form>

                <h5 class="text-success">@ViewBag.success</h5>

            </div>
        </div>
    </div>
</div>
<!-- Registration Section End -->